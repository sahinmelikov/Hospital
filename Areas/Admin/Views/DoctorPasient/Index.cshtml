@using Hospital_Template.Models
@model Doctor


@{
    int count = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                <a asp-controller="Featurress" asp-action="Create" type="button" class="btn btn-primary btn-lg">Create</a>
            </p>
            <div class="table-responsive w-75">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Count
                            </th>
                            
                            <th>
                                DoctorName
                            </th>
                              <th>
                                HospitalName
                            </th>
                            <th>
                                PositionName
                            </th>
                            <th>
                                PasientName
                            </th>
                            <th>
                                DataTime
                            </th>
                           

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Appointments)
                        {
                            @if (item.AppointmentDateTime==null)
                            {
                                <tr style="background-color:red">
                               
                                <td>
                                    @count
                                </td>
                                <td>
                                    @item.Doctor.Name
                                </td>
                                <td>
                                    @item.Doctor.Hospital.Name
                                </td>
                                <td>
                                    @item.Doctor.doctorPosition.Position
                                </td>
                                <td>
                                    @item.PasientName
                                </td>
                                <td>
                                    @item.AppointmentDateTime
                                </td>
                               
                                <td>
                                    <a asp-route-Id="@item.Id" asp-controller="DoctorPasient" asp-action="Update" type="button" class="btn btn-primary"><i class="bi bi-hand-index-thumb"></i></a>
                                    <a asp-route-Id="@item.Id" asp-action="Delete" type="button" class="btn btn-secondary"><i class="bi bi-trash3-fill"></i></a>

                                </td>
                            </tr>
                            }
                            else
                            {
                                <tr style="">

                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Doctor.Name
                                    </td>
                                    <td>
                                        @item.Doctor.Hospital.Name
                                    </td>
                                    <td>
                                        @item.Doctor.doctorPosition.Position
                                    </td>
                                    <td>
                                        @item.PasientName
                                    </td>
                                    <td>
                                        @item.AppointmentDateTime
                                    </td>

                                    <td>
                                        <a asp-route-Id="@item.Id" asp-controller="DoctorPasient" asp-action="Update" type="button" class="btn btn-primary"><i class="bi bi-hand-index-thumb"></i></a>
                                        <a asp-route-id="@item.Id" asp-action="Delete" type="button" class="btn btn-secondary"><i class="bi bi-trash3-fill"></i></a>

                                    </td>
                                </tr>
                            }
                            
                            count++;
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
