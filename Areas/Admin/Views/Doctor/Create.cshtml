@using Hospital_Template.ViewModel;

@model DoctorCreateVM

<div class="card-body">
    <form class="forms-sample" enctype="multipart/form-data" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <label asp-for="Photo"></label>
            <input asp-for="Photo" class="form-control" />
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="HomeAddress"></label>
            <input asp-for="HomeAddress" class="form-control" />
            <span asp-validation-for="HomeAddress"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div class="form-group">
            <label asp-for="HospitalID"></label>
            <select asp-for="HospitalID" class="form-control">
                <option value="">Seçiniz</option>
                @if (ViewBag.Hospitals != null)
                {
                    foreach (var product in ViewBag.Hospitals)
                    {
                        <option value="@product.Value">@product.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="HospitalID"></span>
        </div>
        <div class="form-group">
            <label asp-for="DoctorPositionId"></label>
            <select asp-for="DoctorPositionId" class="form-control">
                <option value="">Seçiniz</option>
                @if (ViewBag.DoctorPositions != null)
                {
                    foreach (var product in ViewBag.DoctorPositions)
                    {
                        <option value="@product.Value">@product.Text</option>
                    }
                }
            </select>
            <span asp-validation-for="DoctorPositionId"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <button asp-controller="Doctor" asp-action="DoctorUpper" class="btn btn-light">Cancel</button>
    </form>
</div>


